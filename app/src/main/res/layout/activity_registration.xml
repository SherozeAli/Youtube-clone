<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RegistrationActivity"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">



    <TextView
        android:id="@+id/register_maintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration Page"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"
        android:textSize="0.17in"/>

    <ImageView
        android:id="@+id/register_imageView"
        android:layout_width="550dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"

        />
    <Button
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:id="@+id/upload_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="300dp"
        android:background="@drawable/edit"
        />

    <EditText
        android:layout_marginLeft="30dp"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:id="@+id/register_fullname"
        android:layout_marginTop="30dp"
        android:inputType="textPersonName"/>

    <EditText
        android:layout_marginLeft="30dp"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="Enter Email"
        android:id="@+id/register_email"
        android:inputType="textEmailAddress"/>
    <EditText
        android:layout_marginLeft="30dp"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:id="@+id/register_password"
        android:inputType="textPassword"
        />
    <EditText
        android:layout_marginLeft="30dp"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="Enter Phone number"
        android:id="@+id/register_phonenumber"
        android:inputType="number"/>
    <EditText
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:id="@+id/register_address"
        android:inputType="textPostalAddress"
        android:hint="Enter Address"
        android:layout_marginLeft="30dp"/>

    <Button

        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/register_btn"
        android:text="Register"
        android:layout_marginLeft="65dp"

        />
    <TextView
        android:id="@+id/register_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AlreadyRegistered? Sign In"
        android:layout_marginLeft="85dp"
        android:textSize="0.11in"/>





</LinearLayout>